{
  "extends": [
    "airbnb-base",
    "airbnb-typescript",
    "next/core-web-vitals",
    "prettier"
  ],
  "rules": {
    "@typescript-eslint/no-unused-vars": "off",
    "unused-imports/no-unused-imports": "error",
    "unused-imports/no-unused-vars": [
      "warn",
      {
        "vars": "all",
        "varsIgnorePattern": "^_",
        "args": "after-used",
        "argsIgnorePattern": "^_"
      }
    ]
  },
  "parserOptions": {
    "project": "./tsconfig.json",
    "include": ["src/**/*.ts", "src/**/*.js", "src/**/*.tsx"]
  },
  "plugins": ["unused-imports"]
}
